<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
pageContext.setAttribute("webpath", path);
%>

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
  <head>
    <base href="<%=basePath%>">
<title>Insert title here</title>

<script type="text/javascript" src="static/js/jquery-1.8.3.js"></script>

<script type="text/javascript">
 $(document).ready(function(){
	$("#qccQbid").blur(
	function(){
		$.ajax({
			url:"questionCourseChapterManager/checkqccQbid",
			cache:"false",
			type:"GET",
			dataType:"json",
			async:true,
			data:{qccQbid:$("#qccQbid").val()},
			success:function(msg){
				if(msg==true){
				$("#qcQbidcheck").text("题目id中包含题库没有的内容");
				$("#qccQbid").focus();
				}
				else{
					$("#qcQbidcheck").text("");	
				}
			}

		});
	});
});
</script>
</head>
<body>
${success }
<form action="questionCourseChapterManager/insertQuestionCourseChapter" method="post">
	<table>
		<tr>
			<td>题目id:
				<input id="qccQbid" type="text" name="qccQbid"/><span id="qcQbidcheck"></span>
			</td>
		</tr>
		
		<tr>
			<td>机构id:
				<input type="text" name="qccInsid"/>
			</td>
		</tr>
		
			<tr>
			<td>章节名:
			<select name="ccName">
			<c:forEach items="${courseChapter }" var="coursechapter">
				<option>${coursechapter.ccName }</option>
			</c:forEach>
			</select>
			</td>
		</tr>
	</table>
	
	<input type="submit" value="添加">
</form>
<div>
<table>
		<tr>
			<td>题目id</td>
			<td>章节号</td>
			<td>试题id</td>
			<td>题目内容</td>
			<td>正确答案</td>
			
		</tr>
		<c:forEach items="${qBnaks }" var="qBanks">
			<tr>
				<td>${qBanks.qbId}</td>
				<td>${qBanks.qbCcid}</td>
				<td>${qBanks.qbQtid}</td>
				<td>${qBanks.qbContent}</td>
				<td>${qBanks.qbAnswer}</td>
			</tr>
		</c:forEach>
	</table>


</div>

</body>
</html>